[color]
    diff = auto
    status = auto
    branch = auto

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout

    c = commit --verbose
    ca = commit --verbose --all
    l = log --graph --pretty=format:'%C(dim)%h - %cs (%cr) -%Creset %s %C(dim)-%Creset %C(cyan)%an%Creset%C(yellow)%d%Creset' --abbrev-commit --abbrev=7
    lg = l

[push]
	default = simple

[include]
    path = ~/.gitconfig.local

[pull]
	rebase = true

[init]
	defaultBranch = main
    
[rebase]
	updateRefs = true
	autoSquash = true
