[color]
    diff = auto
    status = auto
    branch = auto

[core]
    pager = diff-so-fancy | less --tabs=4 -RFX

[interactive]
    diffFilter = diff-so-fancy --patch

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 11
    frag = magenta bold
    func = 146 bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout

    c = commit --verbose
    ca = commit --verbose --all
    l = log --graph --pretty=format:'%C(dim)%h - %cs (%cr) -%Creset %s %C(dim)-%Creset %C(cyan)%an%Creset%C(yellow)%d%Creset' --abbrev-commit --abbrev=7
    lg = l

[push]
	default = simple

[include]
    path = ~/.gitconfig.local

[pull]
	rebase = true

[init]
	defaultBranch = main
    
[rebase]
	updateRefs = true
	autoSquash = true
