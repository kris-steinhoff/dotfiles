startup_message off
vbell off

shell bash
termcapinfo xterm-color*|nxterm*|xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
hardstatus alwayslastline "%{YK} ${SCREENSESSION} %{GK}%n %t %-= %{CK}%H"

#caption always ' %H: %3n %t'
defscrollback 10000
zombie dr

# make backspace work:
bindkey -d ^? stuff ^H
bindkey -d ^@ stuff ^H
