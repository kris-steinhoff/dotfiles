shell bash
termcapinfo xterm-color*|nxterm*|xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
hardstatus off
# hardstatus string "[%H] screen %n%?: %t%? %h"
caption always
caption string ' %H: %3n %t'
defscrollback 10000
zombie dr

# make backspace work:
bindkey -d ^? stuff ^H
bindkey -d ^@ stuff ^H
